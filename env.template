# Application Configuration
ENVIRONMENT=dev
LOG_LEVEL=DEBUG
DEBUG=true

# PostgreSQL Configuration
POSTGRES_USER=gtree_user
POSTGRES_PASSWORD=gtree_password
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=gtree

# Database URLs (computed)
